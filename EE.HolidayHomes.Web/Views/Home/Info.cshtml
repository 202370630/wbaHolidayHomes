@model HolidayHomeInfoViewModel

<div class="row">
    <div class="col-2 mx-auto">
        <h5>Info</h5>
    </div>
</div>

<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
    <div class="col mb-5">
        <div class="card h-100">
            <!-- Product image-->
            <img class="card-img-top" src="~/images/@Model.Image" alt="@Model.Name" />
            <!-- Product details-->
            <div class="card-body p-4">
                <div class="text-center">
                    
                    <!-- Product name-->
                    <h5 class="fw-bolder">@Model.Name</h5>

                    <!-- Product price-->
                    @Model.Price.ToString("F2") &euro;

                    <!--Product Location-->
                    <h6 class="fw-bolder">Location</h6>
                    @Model.Location.Name

                    <!--Product Type-->
                    <h6 class="fw-bolder">Type</h6>
                    @Model.HomeType.Name

                    <!--Product Properties-->
                    <h6 class="fw-bolder">Properties</h6>
                    <ul>
                        @foreach (var item in Model.HomeProperties)
                        {
                            <li>@item.Name</li>

                        }
                    </ul>

                </div>
            </div>
            <!-- Product actions-->
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                <div class="text-center">
                    <a class="btn btn-outline-dark mt-auto"
                       asp-controller="Home"
                       asp-action="Index">
                        Back
                    </a>
                    <a class="btn btn-outline-dark mt-auto"
                       asp-controller="Cart"
                       asp-action="Index">
                        Add to Cart
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
